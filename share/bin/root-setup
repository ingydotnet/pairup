#!/bin/bash

# This script will be run as root. It will:
# - add the admin user
# - add the pair user
# - install git
# - apt-get install requested pkgs in the background

set -e

source ~/.PairUp/pairup-env
source ~/.PairUp/lib/pairup-util.bash

main() {
  set -x

  SECTION "Root user setup:"

  admin_user="${PAIRUP_ADMIN%:*}"
  SECTION "Create admin user: $admin_user"
  {
    if [ "$PAIRUP_ROOT_USER" == root ]; then  # Don't addgroup for HPCloud
      addgroup admin || continue?
    fi
    adduser --disabled-password --gecos '' $admin_user || continue?
    adduser $admin_user admin || continue?

    mkdir -p /home/$admin_user/.ssh
    chmod 700 /home/$admin_user/.ssh
    cp $PairUp/keys/$admin_user/authorized_keys* /home/$admin_user/.ssh/
    chown -R $admin_user:admin /home/$admin_user/.ssh
    cp -r $PairUp /home/$admin_user/
    chown -R $admin_user.$admin_user /home/$admin_user/$PairUp

    # No password for sudo:
    echo "$admin_user ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers
  }

  for user in "${PAIRUP_PAIRS[@]}"; do
    local unix_user=${user%:*}
    SECTION "Create pair user: $unix_user"
    {
      adduser --disabled-password --gecos '' $unix_user || continue?

      mkdir -p /home/$unix_user/.ssh
      chmod 700 /home/$unix_user/.ssh
      cp $PairUp/keys/$unix_user/authorized_keys* /home/$unix_user/.ssh/
      chown -R $unix_user:$unix_user /home/$unix_user/.ssh
    }
  done

  SECTION "Copy known hosts to .ssh/:"
  cp "$PairUp/known_hosts" .ssh/known_hosts

  SECTION "Preinstall the things we need to bootstrap:"
  apt-get update --yes
  apt-get install \
    build-essential \
    curl \
    git-core \
    libssl-dev \
    weechat \
    --yes

  SECTION "Install system cpanm:"
  curl -L http://cpanmin.us | perl - App::cpanminus || continue?

  SECTION "Copy PairUp scripts into a PATH directory:"
  cp -f $PairUp/bin/* /usr/local/bin/

  SECTION "chown -R $admin_user:admin '$PairUp'"
  chown -R $admin_user:admin "$PairUp"

  SECTION "DONE! root-setup is complete."
}

[ "$0" != "$BASH_SOURCE" ] || main "$@"
