#!/usr/bin/env bash

# Setup a complex tmux environment for PairUpi. See:
# - http://www.tofu.org/drupal/node/183
# - http://robots.thoughtbot.com/a-tmux-crash-course

set -e

source "${PAIRUP_ROOT:??}/lib/pairup.bash"

main() {
  check_cmd "$@"

  tmux_sock=/tmp/pairup
  motd=$PairUp/motd
  debian_log_file=$PairUp/log/debian.log
  github_log_file=$PairUp/log/github.log
  cpan_log_file=$PairUp/log/cpan.log
  install_log_file=$PairUp/log/install.log

  tmux -S $tmux_sock attach || tmux -S $tmux_sock new \
  \
  ';' set-window-option -g automatic-rename off \
  \
  ';' rename-window "PairUp^" \
  ';' send-keys "pairup-motd; " C-m \
  ';' split-window -h -p 33 \
  ';' send-keys "weechat-curses" C-m \
  ';' select-pane -L \
  ';'
}

check_cmd() {
  if [ $# -ne 0 ]; then
    cat <<... >&2
You ran 'pairup' with arguments. Maybe you meant:

    ${0%/*}/pairup-setup-server $@

...
    exit 1
  fi
}

[ "$0" != "$BASH_SOURCE" ] || main "$@"
