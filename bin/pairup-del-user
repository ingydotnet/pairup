#!/bin/bash

# Usage: del-pair-user <user-id> [-R | <deluser options>]

set -e

source "${BASH_SOURCE%/*}/pairup-helper-functions"

main() {
  pair_user="${1:?userid required}"; shift

  options=()
  for arg; do
    case "$arg" in
    -R)
      options+=('--remove-home')
      ;;
    *)
      options+=("$arg")
      ;;
    esac
  done

  sudo deluser "$pair_user" ${options[*]}

  echo "User '$pair_user' deleted."
}

[ "$0" != "$BASH_SOURCE" ] || main "$@"
