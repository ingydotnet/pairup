#!/bin/bash

set -e

source "${BASH_SOURCE%/*}/../lib/pairup-util.bash"

main() {
  set -x

  repos="$(
    cat "$PairUp/github" |
      grep -Ev '\#' |
      grep -Ev '^$' |
      sort | uniq
  )"

  SECTION "Clone GitHub repos:"
  for repo in $repos; do
    cmd=(
      git clone
      "git@github.com:$repo"
      "src/${repo#*/}"
    )

    SECTION "${cmd[@]}"
    "${cmd[@]}" || true
  done
}

[ "$0" != "$BASH_SOURCE" ] || main "$@"
