TITLE "Install nvm and Node v0.10.24"
RUN install-nvm
RUN nvm-install stable

(
  . ~/.sh/nvm-init
  npm install -g coffee-script
)

TITLE "Install rbenv and Ruby 1.9.3-p545"
RUN install-rbenv
(
  log=$PAIRUP_ROOT/log/ruby.log \
    RUN rbenv-install 1.9.3-p545
) &

TITLE "Install plenv and Perl 5.18.4"
RUN install-plenv
RUN plenv-install 5.18.4

(
  . ~/.sh/plenv-init
  cpanm -n IO::All JSON JSON::XS XXX YAML YAML::Shell YAML::XS
)

TITLE "Done with ingy install script"
